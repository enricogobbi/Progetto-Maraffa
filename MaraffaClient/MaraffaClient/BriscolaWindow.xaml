        mc:Ignorable="d"
        Title="Scegli la briscola" Height="194" Width="456.666" ResizeMode="NoResize" Background="#FFD1FF00" WindowStartupLocation="CenterScreen" WindowStyle="None" Closed="Window_Closed">

