                <ImageBrush ImageSource="Semi/Coppe.png" Stretch="Uniform"/>
            </Button.Background>
        </Button>
        <Button x:Name="btn_Denari" Content="" HorizontalAlignment="Left" Margin="220,41,0,0" VerticalAlignment="Top" Width="100" Height="100" BorderBrush="Black" Click="btn_Denari_Click">
            <Button.Background>
                <ImageBrush ImageSource="Semi/Denari.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="btn_Spade" Content="" HorizontalAlignment="Left" Margin="325,41,0,0" VerticalAlignment="Top" Width="100" Height="100" BorderBrush="Black" Click="btn_Spade_Click">
            <Button.Background>
                <ImageBrush ImageSource="Semi\Spade.png" Stretch="Uniform"/>
            </Button.Background>
        </Button>

    </Grid>
</Window>
